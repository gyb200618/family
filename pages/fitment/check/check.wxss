/* check.wxss */

page {
  height: 100%;
}

.title {
  position: absolute;
  width: 100%;
  height: 120rpx;
  line-height: 120rpx;
  text-align: center;
  font-size: 40rpx;
  font-weight: bold;
}

.content-wrap {
  height: 100%;
  padding-top: 200rpx;
}

.con {
  padding: 40rpx;
  line-height: 60rpx;
}

.op-area {
  position: absolute;
  bottom: 160rpx;
  width: 100%;
  height: 200rpx;
}

.op-area .btn-op {
  position: absolute;
  width: 160rpx;
  height: 160rpx;
  text-align: center;
  line-height: 160rpx;
  color: #fff;
  font-size: 48rpx;
  font-weight: bold;
  border-radius: 50%;
}

.op-area .btn-fail {
  right: 50%;
  margin-right: 60rpx;
  background-color: #eb6133;
}

.op-area .btn-pass {
  left: 50%;
  margin-left: 60rpx;
  background-color: #aacf52;
}

.op-area .btn-choose {
  left: 50%;
  right: auto;
  margin-left: -80rpx !important;
  margin-right: auto;
  font-size: 32rpx;
}


.circle-rate {
  margin: 120rpx auto;
  width: 360rpx;
  height: 360rpx;
  border-radius: 50%;
  border: 12rpx solid #aacf52;
}