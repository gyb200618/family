/* add.wxss */
page {
  position: relative;
}

.wrapper {
  position: absolute;
  top: 0;
  right: 0;
  bottom: 0;
  left: 0;
}

.cost-wrap {
  height: 120rpx;
  line-height: 120rpx;
  text-align: center;
  font-size: 48rpx;
}

.type-list {
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  margin: 30rpx 10rpx;
}

.type-item {
  width: 140rpx;
  font-size: 24rpx;
  margin-bottom: 20rpx;
  text-align: center;
}

.icon-item {
  width:64rpx;
  height: 64rpx;
  margin: 0 auto 10rpx;
  border-radius: 50%;
}

.icon-item-active {
  border: 1rpx solid #647eb5;
}

.label-item-active {
  color: #647eb5;
  font-weight: bold;
}

.edt-area {
  position: relative;
  height: 40rpx;
  padding: 0 40rpx;
}

.record-date {
  float: left;
  margin-left: 20rpx;
  font-size: 32rpx;
}

.memo-btn {
  float: right;
  width: 40rpx;
  height: 40rpx;
  margin-right: 20rpx;
  border-radius: 50%;
  background: url(http://ac-8lepgylb.clouddn.com/baf85ee0262ec4b2f2b0.png) no-repeat center;
  background-size: contain;
}

.date-picker {
  position: absolute;
  bottom: 0;
  width: 100%;
  border-top: 4rpx solid #f6f0ce;
  background-color: #fff;
}

.op-area {
  margin: 80rpx 40rpx;
}

.keyboard {
  position: absolute;
  bottom: 0;
  width: 100%;
  border: 1rpx solid #f6f0ce;
  border-top-width: 4rpx;
  border-right: 0;
  border-bottom: 0;
  background-color: #fff;
}

.row {
  display: flex;
  flex-direction: row;
  justify-content: center;
}

.col1 {
  flex: 1;
  text-align: center;
  border-bottom: 1px solid #f6f0ce;
  border-right: 1px solid #f6f0ce;
}

.col2 {
  flex: 2;
  text-align: center;
  border-bottom: 1px solid #f6f0ce;
  border-right: 1px solid #f6f0ce;
}

.col3 {
  flex: 3;
  text-align: center;
  border-bottom: 1px solid #f6f0ce;
  border-right: 1px solid #f6f0ce;
}

.col-outer {
  border: none;
}

.num {
  height: 50px;
  line-height: 50px;
}

.op {
  height: 100px;
  line-height: 100px;
}

.memo-input {
  width: auto;
  height: 160rpx;
  margin: 40rpx;
  color: #534a46;
  border-radius: 8rpx;
  border: 1rpx solid #f6f0ce;
  padding: 20rpx;
}