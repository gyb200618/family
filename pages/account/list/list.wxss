/* list.wxss */

/** ------ style for group join and create page ------ **/

.account-top {
  z-index: 99;
  position: relative;
  height: 320rpx;
  overflow: hidden;
  background-color: #fff;
}

.cost-status {
  position: absolute;
  top: 40rpx;
  left: 50%;
  width: 200rpx;
  height: 200rpx;
  margin-left: -100rpx;
  font-size: 40rpx;
  line-height: 200rpx;
  text-align: center;
  border: 2rpx solid #647eb5;
  border-radius: 50%;
}

.cost-status::after {
  display: inline-block;
  position: absolute;
  top: 202rpx;
  left: 50%;
  width: 0;
  height: 80rpx;
  content: '';
  border-right: 1rpx solid #f6f0ce;
}

.account-list {
  position: absolute;
  top: 310rpx;
  right: 0;
  bottom: 0;
  left: 0;
  background: #fff;
  overflow: hidden;
}

.tip {
  position: absolute;
  left: 50%;
  width: 40rpx;
  height: 40rpx;
  margin-left: -20rpx;
  border: 1rpx solid #f6f0ce;
  border-radius: 50%;
  background: #647eb5;
}

.line {
  width: 0;
  height: 400rpx;
  margin-left: 50%;
  border-right: 1rpx solid #f6f0ce;
}

.list-item {
  position: relative;
  height: 100rpx;
  line-height: 100rpx; 
}

.list-item-memo {
  position: relative;
  height: 40rpx;
}

.list-item::before,
.list-item-memo::before {
  z-index: 1;
  display: inline-block;
  position: absolute;
  top: 0;
  left: 50%;
  width: 0;
  height: 100%;
  content: '';
  border-right: 1rpx solid #f6f0ce;
}

.item-dot {
  z-index: 2;
  position: absolute;
  top: 50%;
  left: 50%;
  width: 32rpx;
  height: 32rpx;
  margin-top: -16rpx;
  margin-left: -16rpx;
  text-align: center;
  line-height: 24rpx;
  font-size: 24rpx;
  color: #fff;
  border-radius: 50%;
  border: 4rpx solid #fff;
  background-color: #f6f0ce;
}

.dot-sun {
  background-color: #647eb5;
}

.dot-sta {
  background-color: #aacf52;
}

.dot-del {
  width: 48rpx;
  height: 48rpx;
  margin-top: -24rpx;
  margin-left: -24rpx;
  text-align: center;
  line-height: 40rpx;
  background-color: #eb6133;
}

.icon-item {
  position: absolute;
  top: 50%;
  left: 50%;
  width: 64rpx;
  height: 64rpx;
  margin-top: -32rpx;
  margin-left: 60rpx;
}

.item-tag {
  position: absolute;
  left: 50%;
  margin-left: 140rpx;
}

.item-tag-memo {
  position: absolute;
  top: -10rpx;
  right: 40rpx;
  left: 50%;
  margin-left: 70rpx;
  font-size: 24rpx;
  color: #d3d3d4;
  text-overflow: ellipsis;
  white-space: nowrap;
  overflow: hidden;
}

.icon-item-bottom {
  position: absolute;
  top: 100%;
  left: 50%;
  width: 48rpx;
  height: 48rpx;
  margin-bottom: 60rpx;
  margin-left: -24rpx;
  border-radius: 50%;
  border: 4rpx solid #fff;
  background-color: #647eb5;
}

.month-label {
  position: absolute;
  right: 50%;
  margin-right: 120rpx;
}

.day-label {
  position: absolute;
  right: 50%;
  margin-right: 80rpx;
  font-size: 24rpx;
}

